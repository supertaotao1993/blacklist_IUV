<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#b3000000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/longpress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/global_action_rboot_message"
        android:textColor="#8affffff"
        android:textSize="12sp" />

    <!--airplane mode -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="212dp"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/airplanemode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/airplane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="19dp"
                android:paddingEnd="19dp"
                android:clickable = "false"
                android:tint="#ffffff"
                android:alpha="0.9"
                android:background="@drawable/circle1"/>
            <TextView
                android:id="@+id/text_airplane"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:gravity="center"
            android:paddingTop="10dp"
            android:textColor="@color/global_action_text"
            android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <!--Ringer mode-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="212dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/silent_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/silent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="19dp"
                android:paddingEnd="19dp"
                android:clickable = "false"
                android:tint="#ffffff"
                android:alpha="0.9"
                android:background="@drawable/circle1"/>
            <TextView
                android:id="@+id/text_silent"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textColor="@color/global_action_text"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <!--reset-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="348dp"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/reset_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <ImageButton
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="19dp"
            android:paddingEnd="19dp"
            android:clickable = "false"
            android:src="@drawable/ic_lock_reboot"
            android:tint="#ffffff"
            android:alpha="0.9"
            android:background="@drawable/circle1"
            android:contentDescription="@string/global_action_reset"/>
        <TextView
            android:id="@+id/text_reset"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/global_action_reset"
            android:textColor="@color/global_action_text"
            android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <!--power-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="348dp"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/power_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="19dp"
                android:paddingEnd="19dp"
                android:clickable = "false"
                android:src="@drawable/ic_lock_power"
                android:tint="#ffffff"
                android:alpha="0.9"
                android:background="@drawable/circle1"
                android:contentDescription="@string/global_action_poweroff"/>
            <TextView
                android:id="@+id/text_power"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="@string/global_action_poweroff"
                android:textColor="@color/global_action_text"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
    
</RelativeLayout>
