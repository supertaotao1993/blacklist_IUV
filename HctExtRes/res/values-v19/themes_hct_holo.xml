    <!-- Light holo dialog themes -->

    <!-- Holo light theme for dialog windows and activities, which is used by the
         {@link android.app.Dialog} class.  This changes the window to be
         floating (not fill the entire screen), and puts a frame around its
         contents.  You can set this theme on an activity if you would like to
         make an activity that looks like a Dialog.
         This is the default Dialog theme for applications targeting Honeycomb
         or newer. 
         
         -->
    <style name="Theme.HCT.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.HCT.Light.Holo</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.HCT.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
	 <item name="android:windowBackground">@drawable/dialog_full_hct_light </item>
        <item name="android:colorBackgroundCacheHint">@null</item>

	<item name="dialogTitleBackground">@drawable/dialog_activity_top_hct_light</item>
	

        <item name="android:textAppearance">@style/TextAppearance.HCT.Light.Holo</item>
        <item name="android:textAppearanceInverse">@style/TextAppearance.HCT.Light.Holo.Inverse</item>

        <item name="android:listPreferredItemPaddingLeft">16dip</item>
        <item name="android:listPreferredItemPaddingRight">16dip</item>
    </style>

